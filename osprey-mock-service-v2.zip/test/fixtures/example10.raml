#%RAML 1.0
title: Example API
baseUri: http://example.com/api
mediaType: application/json

types:
  User:
    type: object
    properties:
      name:
        type: string
        example: Kendrick
      lastname:
        type: string
        example: Lamar
      age:
        type: number
        example: 10
      good:
        type: boolean
        example: true
      array:
        type: array
        example:
          - foo
          - bar
      object:
        type: object
        example:
          foo: 1
          bar: 2

/test:
  get:
    responses:
      200:
        headers:
        body:
          application/json:
            example:
              success: true

/nested:
  get:
    responses:
      200:
        body:
          application/json:
            example:
              nested:
                success: true

/boolean:
  get:
    responses:
      200:
        body:
          application/json:
            type: boolean
            example: true

/examples:
  get:
    responses:
      200:
        body:
          application/json:
            examples:
              example1:
                name: example1
              example2:
                name: example2

/noexample:
  get:
    responses:
      200:
        body:
          application/json:

/headersdefaultbeforeexample:
  get:
    responses:
      200:
        headers:
          foo:
            example: bar
            default: test

/headersexample:
  get:
    responses:
      200:
        headers:
          foo:
            example: bar

/headersexamples:
  get:
    responses:
      200:
        headers:
          foo:
            examples:
              first: bar
              second: foo
              third: random
              fourth: another

/headersdefault:
  get:
    responses:
      200:
        headers:
          foo:
            default: test

/defaultmediatype:
  get:
    responses:
      200:
        body:
          example:
            stringProperty: foo
            numberProperty: 23

/ext{ext}:
  get:
    responses:
      200:
        body:
          application/json:
            example:
              stringProperty: foo
              numberProperty: 23
          application/xml:
            example: !include ./example.xml

/user:
  get:
    responses:
      200:
        body:
          application/json:
            type: User
